<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-end mb-3" >
  <button> <%= link_to "Add food", new_food_path, class: '' %> </button>
</div>

<div id="foods">

  <div class="">
    <div class="table-responsive">
      <table class="table table-primary">
        <thead>
          <tr>
            <th scope="col">Food</th>
            <th scope="col">Measurement unit</th>
            <th scope="col">Unit price</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
        
          <% @foods.each do |food| %>
            <tr class="">            
              <td scope="row"> 
               <%= link_to "#{food.name}", food %>               
               </td>
              <td scope="row"> <%= food.measurement_unit%> </td>
              <td scope="row"> $ <%= food.price%> </td>              
              <td scope="row">                
                <%= button_to "Delete", food, method: :delete %>
              </td>
            </tr>          
          <%end%>

        </tbody>
      </table>
    </div>
    
  
  </div>


</div>


